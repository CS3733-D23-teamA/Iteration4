<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane maxHeight="-Infinity" minHeight="-Infinity" styleClass="navpane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamA.controllers.NavigationBarController">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity">
               <children>
                  <HBox alignment="CENTER" maxWidth="100.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <ImageView fx:id="home" fitHeight="68.0" fitWidth="67.0" onMouseClicked="#goHome" HBox.hgrow="ALWAYS">
                           <image>
                              <Image url="@../images/icons/bwh-logo-white.png" />
                           </image>
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="30.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="serviceRequestsButton" alignment="CENTER" mnemonicParsing="false" onAction="#openServiceRequests" style="-fx-font-weight: bold;" text="Service Requests" />
                        <Button fx:id="pathfindingButton" alignment="CENTER" mnemonicParsing="false" onAction="#openPathfinding" style="-fx-font-weight: bold;" text="Pathfinding" />
                        <Button fx:id="signageButton" alignment="CENTER" mnemonicParsing="false" onAction="#openSignage" style="-fx-font-weight: bold;" text="Signage" />
                        <Button fx:id="mapEditorButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openMapEditor" style="-fx-font-weight: bold;" text="Map Editor" />
                        <Button fx:id="movesButton" alignment="CENTER" mnemonicParsing="false" onAction="#openMoves" style="-fx-font-weight: bold;" text="Moves" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" maxWidth="150.0" HBox.hgrow="ALWAYS">
                     <children>
                        <MenuButton fx:id="profileButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="80.0" maxWidth="80.0" minHeight="31.0" minWidth="71.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="71.0" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="ALWAYS">
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#openAccount" text="Settings" />
                              <MenuItem mnemonicParsing="false" onAction="#logout" text="Sign Out" />
                              <MenuItem fx:id="exitMenu" mnemonicParsing="false" onAction="#exitApp" text="Exit" />
                           </items>
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                           <padding>
                              <Insets right="-2.0" />
                           </padding>
                        </MenuButton>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </HBox>
               </children>
               <StackPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </StackPane.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </StackPane>
   </center>
   <stylesheets>
      <URL value="@stylesheets/main.css" />
      <URL value="@stylesheets/navbar.css" />
   </stylesheets>
</BorderPane>
