<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="900.0" prefWidth="1600.0" stylesheets="@stylesheets/main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamA.controllers.Navigation.AccountMenuController">
    <top>
        <fx:include fx:id="navbar" source="NavigationBar.fxml" />
    </top>
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="750.0" prefWidth="868.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="130.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Your Old Password" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Old Password Again" />
                     </children>
                     <padding>
                        <Insets left="37.0" />
                     </padding>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="150.0">
                     <children>
                        <MFXPasswordField fx:id="password1" onAction="#updatePassword" />
                        <MFXPasswordField fx:id="password2" onAction="#updatePassword" />
                     </children>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="120.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Your New Password" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter New Password Again" />
                     </children>
                     <padding>
                        <Insets left="37.0" />
                     </padding>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="150.0">
                     <children>
                        <MFXPasswordField fx:id="newPassword1" onAction="#updatePassword" />
                        <MFXPasswordField fx:id="newPassword2" onAction="#updatePassword" />
                     </children>
                     <VBox.margin>
                        <Insets left="50.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <MFXButton fx:id="submitButton" onAction="#updatePassword" text="Submit" />
                     </children>
                     <padding>
                        <Insets left="215.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
        </StackPane>
    </center>
   <left>
      <VBox alignment="TOP_CENTER" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #012D5A;" BorderPane.alignment="TOP_CENTER">
         <children>
            <Label fx:id="title" style="-fx-text-fill: #f1f1f1;" text="Account Settings">
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
            </Label>
            <MFXButton fx:id="changePasswordButton" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" style="-fx-background-color: blightblue; -fx-text-fill: bblue;" styleClass="blue-styled-button" text="Change Password" />
            <MFXButton fx:id="updateNameButton" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" style="-fx-background-color: blightblue; -fx-text-fill: bblue;" styleClass="blue-styled-button" text="Update Name" />
            <MFXButton fx:id="logoutButton" maxWidth="-Infinity" minWidth="-Infinity" onAction="#logout" prefWidth="200.0" style="-fx-background-color: blightblue; -fx-text-fill: bblue;" styleClass="blue-styled-button" text="Logout" />
            <MFXButton fx:id="exitApplicationButton" maxWidth="-Infinity" minWidth="-Infinity" onAction="#exitApp" prefWidth="200.0" style="-fx-background-color: blightblue; -fx-text-fill: bblue;" styleClass="blue-styled-button" text="Exit Application" />
         </children>
         <padding>
            <Insets top="70.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
